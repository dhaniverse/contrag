# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database
DB_USER=postgres
DB_PASSWORD=your_password

# For MongoDB (alternative to PostgreSQL)
# MONGO_URL=mongodb://localhost:27017
# MONGO_DB_NAME=your_database

# Vector Database (pgvector - can use same or different database)
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=5432
VECTOR_DB_NAME=your_vectors_db
VECTOR_DB_USER=postgres
VECTOR_DB_PASSWORD=your_password

# For Weaviate (alternative to pgvector)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=optional_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Environment Variables for CLI (alternative to config file)
# CONTRAG_DB_PLUGIN=postgres
